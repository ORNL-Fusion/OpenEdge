################################################################################
# plasma parameters
variable n  equal 5e18  #1/m^3
variable fnum         equal 5e14  # increase the number of particle to reduce noise
variable T            equal 12.0*11604.505     # 12 eV
variable Tev          equal 12.0     # 12 eV
variable time         equal 1e-7 # s
variable dt           equal 1e-09     # 1 ns
variable numStep      equal floor(${time}/${dt})
variable dumpFreq1    equal floor(${numStep}/1000)


############################################--------------###########################################
seed                12345
dimension           2
boundary            p p p
global              gridcut 0 comm/sort no
create_box          1.8 3.22 -1 1 -0.5 0.5
#create_box          -1 1 -1 1 -1 1
create_grid         1 1 1
balance_grid        rcb cell


############################################--------------##############################################
global              nrho $n  fnum ${fnum} temp $T



##################################--- Impurity species setting----######################################
species             plasma.species W W+ W2+ W3+ W4+ W5+ W6+ W7+ W8+ W9+
mixture             species W     frac 1.    # type 1
mixture             species W+     frac 0.    # type 1
mixture             species W2+     frac 0.    # type 1
mixture             species W3+    frac 0.    # type 2
mixture             species W4+   frac 0.    # type 3
mixture             species W5+   frac 0.    # type 4
mixture             species W6+   frac 0.    # type 5
mixture             species W7+   frac 0.   # type 6
mixture             species W8+   frac 0.    # type 7
mixture             species W9+   frac 0.    # type 8


##################################---creating particles----######################################
create_particles    species n 2000                # create number of particles using global readl density, fnum and system volume



compute cnear plasma/fields/constant all all magnetic_field 0 0.0 0. electric_field 0 0 0 temp_e 12 temp_i 12. dens_e $n dens_i $n parrflow 0 surfid mindist bx by bz ex ey ez temp_e temp_i dens_i dens_e


fix 22 chem/adas 1 74 plasma.reactions plasma c_cnear[10] c_cnear[11]

##################################---diagnostic----######################################
compute 1 grid all species nrho                 # compute spatial number density
fix 1 ave/grid all 1 10 10 c_1[*]                 # time-averaged value on cell
dump 1 grid all 10 tmp.grid.tungsten id xc yc f_1[*]    # save 2D densities for all species on tmp.grid file

##################################---timestepping and run simulation----######################################

timestep            ${dt}
stats               100
stats_style         step cpu np

run                ${numStep}

#EOF
